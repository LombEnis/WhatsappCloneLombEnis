<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/grey_ripple_rectangle_transparent">

    <ImageButton
        android:id="@+id/my_profile_image_button"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@android:color/transparent"
        android:layout_marginLeft="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <com.devlomi.circularstatusview.CircularStatusView
        android:id="@+id/my_profile_image_circular_status_view"
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:layout_constraintBottom_toBottomOf="@id/my_profile_image_button"
        app:layout_constraintEnd_toEndOf="@id/my_profile_image_button"
        app:layout_constraintStart_toStartOf="@id/my_profile_image_button"
        app:layout_constraintTop_toTopOf="@id/my_profile_image_button"
        app:portion_color="@color/grey"
        app:portion_spacing="4dp"
        app:portion_width="2dp" />

    <ImageView
        android:id="@+id/my_plus_imageview"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/round_button_background"
        android:padding="4dp"
        android:src="@drawable/ic_plus_vector_24"
        app:layout_constraintBottom_toBottomOf="@+id/my_profile_image_button"
        app:layout_constraintEnd_toEndOf="@+id/my_profile_image_button" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@id/my_profile_image_button"
        app:layout_constraintStart_toEndOf="@id/my_profile_image_button"
        app:layout_constraintTop_toTopOf="@id/my_profile_image_button">

        <TextView
            android:id="@+id/my_status_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/il_mio_stato"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/my_status_subtitle_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="@string/tocca_per_aggiornare_lo_stato" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>