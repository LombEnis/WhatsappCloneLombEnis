<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Status layout -->
    <RelativeLayout
        android:id="@+id/status_root_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".StatusActivity">

        <ImageView
            android:id="@+id/story_imageview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/navigation_buttons_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <Button
                android:id="@+id/left_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:longClickable="true" />

            <Button
                android:id="@+id/right_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:longClickable="true" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/progress_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/action_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/progress_linearlayout"
            android:background="@android:color/transparent"
            android:minHeight="?attr/actionBarSize"
            android:theme="@style/AppTheme.Toolbar"
            app:contentInsetStartWithNavigation="0dp"
            app:subtitleTextAppearance="@style/StoriesSubtitleTextStyle"
            app:titleMarginStart="17dp"
            app:titleTextAppearance="@style/StoriesTitleTextStyle"
            app:titleTextColor="@color/white" />

        <Button
            android:id="@+id/views_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/status_button_ripple_round_background"
            android:drawableLeft="@drawable/ic_eye_vector_30"
            android:drawableTint="@color/white"
            android:minWidth="0dp"
            android:text="0"
            android:textColor="@color/white" />

        <RelativeLayout
            android:id="@+id/bottom_relativelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/caption_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@color/translucent"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Prova di testo"
                android:textColor="@color/white" />

            <FrameLayout
                android:id="@+id/bottom_empty_framelayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/caption_textview"
                android:background="@color/translucent">

            </FrameLayout>

        </RelativeLayout>

    </RelativeLayout>

    <!-- Views dialog layout -->
    <include
        layout="@layout/dialog_status_views"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        app:layout_constraintTop_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>