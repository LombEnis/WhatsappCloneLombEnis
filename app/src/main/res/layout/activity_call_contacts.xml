<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewCallActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/callContactsActivityToolbar"
        android:background="?attr/colorPrimary"
        android:theme="@style/AppTheme.Toolbar"
        app:titleTextColor="?attr/colorOnPrimary"
        app:title="@string/select"
        app:subtitle="10 contatti" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/callContactsActivityToolbar"
        android:id="@+id/callContactsRecView" />

</RelativeLayout>