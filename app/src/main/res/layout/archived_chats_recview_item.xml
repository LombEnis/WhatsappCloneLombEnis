<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="12dp">

    <ImageView
        android:id="@+id/archivedChatsProfileImg"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_default_avatar" />

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="34dp"
        android:background="@drawable/circular_check_background"
        android:padding="4dp"
        app:layout_constraintStart_toStartOf="@+id/archivedChatsProfileImg"
        app:layout_constraintTop_toTopOf="@+id/archivedChatsProfileImg"
        app:srcCompat="@drawable/ic_check"
        android:id="@+id/archivedChatsSelectedCheck"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/archivedChatsContactName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="6dp"
        android:text="Contact Name"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/archivedChatsProfileImg"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/archivedChatsMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="4dp"
        android:text="Last message"
        android:textColor="@color/grey"
        app:layout_constraintStart_toEndOf="@+id/archivedChatsProfileImg"
        app:layout_constraintTop_toBottomOf="@+id/archivedChatsContactName" />

    <TextView
        android:id="@+id/archivedChatsTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>