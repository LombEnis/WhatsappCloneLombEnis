<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="12dp"
    android:background="@drawable/grey_ripple_rectangle_transparent"
    android:id="@+id/archivedChatsItemLayout">

    <ImageView
        android:id="@+id/archivedChatsProfileImg"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_default_avatar" />

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="34dp"
        android:background="@drawable/circular_check_background"
        android:padding="4dp"
        app:layout_constraintStart_toStartOf="@+id/archivedChatsProfileImg"
        app:layout_constraintTop_toTopOf="@+id/archivedChatsProfileImg"
        app:srcCompat="@drawable/ic_check"
        android:id="@+id/archivedChatSelectedCheck"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/archivedChatsContactName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="6dp"
        android:text="Contact Name"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/archivedChatsProfileImg"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/archivedChatsMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="4dp"
        android:text="Last message"
        android:textColor="@color/grey"
        app:layout_constraintStart_toEndOf="@+id/archivedChatsProfileImg"
        app:layout_constraintTop_toBottomOf="@+id/archivedChatsContactName" />

    <TextView
        android:id="@+id/archivedChatsTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:layout_marginRight="6dp"
        android:background="@drawable/archived_border"
        android:padding="4dp"
        android:text="@string/feminine_archived"
        android:textColor="@color/light_black"
        android:textSize="13.5dp"
        app:layout_constraintBottom_toBottomOf="@+id/archivedChatsMessage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/archivedChatsMessage" />

</androidx.constraintlayout.widget.ConstraintLayout>