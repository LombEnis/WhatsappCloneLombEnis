<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/grey_ripple_rectangle_transparent">

    <ImageView
        android:id="@+id/callProfileImg"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/callsSelectedCheck"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="34dp"
        android:background="@drawable/circular_check_background"
        android:padding="4dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/callProfileImg"
        app:layout_constraintTop_toTopOf="@+id/callProfileImg"
        app:srcCompat="@drawable/ic_check" />

    <TextView
        android:id="@+id/callContactName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="18dp"
        android:text="Name"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/callProfileImg"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/callInfo"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/callTime"
        app:layout_constraintStart_toEndOf="@+id/callProfileImg"
        app:layout_constraintTop_toTopOf="@+id/callTime"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/callTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="17dp"
        android:text="Time"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/numberInsideCalls" />

    <ImageView
        android:id="@+id/callImageView"
        android:layout_width="65dp"
        android:layout_height="80dp"
        android:background="@drawable/grey_ripple_rectangle_transparent"
        android:scaleType="center"
        app:layout_constraintBottom_toBottomOf="@+id/callProfileImg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/callProfileImg"
        app:srcCompat="@drawable/ic_call" />

    <TextView
        android:id="@+id/numberInsideCalls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        app:layout_constraintBottom_toBottomOf="@+id/callTime"
        app:layout_constraintStart_toEndOf="@+id/callInfo"
        app:layout_constraintTop_toTopOf="@+id/callTime"
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>